---
# This library is designed so that each step is Independent & idempotent. Enabling Reuse in other Gluster configuration!

- hosts: nodes
  gather_facts: true
  vars:
    use_lvm: false
    filesystem: "btrfs"
    use_dns: false

  roles:
  - cluster
  - Gluster/install
  - Storage cluster
  - Volume/directory


- hosts: single
  roles:
  - Gluster/peer
  - Volume/create/simple volume

# - hosts: client
#   roles:
#   - client/mount
