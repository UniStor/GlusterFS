# Old/ Delete all this!

- name: Mount in FStab by UUID
  become: true
  ansible.posix.mount:
    path: "{{export}}/{{ ansible_device_links.uuids[ item ] | join(',') }}"
    src: "UUID={{ ansible_device_links.uuids[ item ] | join(',') }}"
    fstype: "{{filesystem}}"
    opts: noatime
    state: mounted
  loop: "{{ storage_partition }}"

- name: Bind Mount in FStab from UUID
  become: yes
  ansible.posix.mount:
    path: "{{export}}{{brick_number}}"
    src: "{{export}}/{{ ansible_device_links.uuids[ item ] | join(',') }}"
    opts: bind
    state: mounted
    fstype: none
  loop: "{{ storage_partition }}"
  loop_control:
    index_var: brick_number
