---

- name: update facts to get new filesystems
  setup:

- include_tasks: "{{playbook_dir}}/roles/Storage cluster/get/tasks/partiton formatted for Use"

- name: Mount in FStab by UUID
  become: true
  ansible.posix.mount:
    path: "{{mount_home}}/{{mount_name}}/{{ ansible_device_links.uuids[ item ] | join(',') }}"
    src: "UUID={{ ansible_device_links.uuids[ item ] | join(',') }}"
    fstype: "{{filesystem}}"
    opts: noatime
    state: mounted
  loop: "{{ storage_partition }}"
