---

- name: Get all nodes
  set_fact:
    all_nodes: "{{ groups['nodes'] | map('extract', hostvars, ['ansible_default_ipv4', 'address']) | join(',') }}"



- name: Create a trusted storage pool
  gluster.gluster.gluster_peer:
    state: present
    nodes:
