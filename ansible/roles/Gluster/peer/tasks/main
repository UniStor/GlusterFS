---

# DNS: use Hostnames instaed of IPs!
- name: Get all nodes
  set_fact:
    all_nodes: "{{ groups['nodes'] | map('extract', hostvars, ['ansible_hostname']) }}"


- name: Create a trusted storage pool
  become: yes
  gluster.gluster.gluster_peer:
    state: present
    nodes: "{{ all_nodes }}"


