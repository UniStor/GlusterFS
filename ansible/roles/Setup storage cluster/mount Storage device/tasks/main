---

- name: update facts to get new filesystems
  setup:

# iterate over partitions, and keeep if label matches `fs_label_prefix` i.e. "gluster."
- name: Get Partitions formatted for Gluster - Simpler `fs_label_prefix` only
  set_fact:
    gluster_partition: "{{ gluster_partition + [item.key] }}"
  loop: "{{ lookup('dict', ansible_device_links.labels) }}"
  when: fs_label_prefix in item.value


- include_tasks: fstab mount
