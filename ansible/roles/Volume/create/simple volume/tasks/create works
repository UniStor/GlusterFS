---

- name: create gluster volume
  become: yes
  gluster.gluster.gluster_volume:
    state: present
    name: "{{volume_name}}"
    bricks: "/data/glusterfs/simple_gluster/brick0/current/brick"
    rebalance: yes
    cluster: "{{ groups['cluster'] | map('extract', hostvars, ['ansible_hostname']) }}"
  run_once: true
