---

- include_tasks: "{{playbook_dir}}/roles/Storage cluster/get/tasks/get vars"

- name: create gluster volume
  become: yes
  gluster.gluster.gluster_volume:
    state: present
    name: "{{volume_name}}"
    bricks: "{{bind_mount}}{{brick_number}}/{{volume_name}}"
    rebalance: yes
    cluster: "{{ groups['nodes'] }}"
  run_once: true
