---

- include_tasks: get vars

- include_tasks: "{{playbook_dir}}/roles/Storage cluster/get/tasks/partiton formatted for Use"


- name: Bind Mount in FStab from UUID
  become: yes
  ansible.posix.mount:
    path: "{{mount_home}}/{{mount_name}}/brick{{brick_number}}"
    src: "{{mount_home}}/{{mount_name}}/{{ ansible_device_links.uuids[ item ] | join(',') }}"
    opts: bind
    state: mounted
    fstype: none
  loop: "{{ storage_partition }}"
  loop_control:
    index_var: brick_number
